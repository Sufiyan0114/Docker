{
  "id": null,
  "uid": "system-monitoring-dashboard",
  "title": "System Monitoring Dashboard",
  "tags": ["system", "monitoring", "node-exporter"],
  "timezone": "browser",
  "style": "dark",
  "panels": [
    {
      "id": 1,
      "title": "CPU Usage",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 8,
        "h": 8
      },
      "targets": [
        {
          "expr": "100 - (avg by(instance) (rate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
          "legendFormat": "CPU Usage %",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "percent",
          "min": 0,
          "max": 100
        },
        {
          "format": "short"
        }
      ],
      "lines": true,
      "fill": 1,
      "linewidth": 2,
      "thresholds": [
        {
          "colorMode": "critical",
          "fill": true,
          "line": true,
          "op": "gt",
          "value": 80
        }
      ]
    },
    {
      "id": 2,
      "title": "Memory Usage",
      "type": "graph",
      "gridPos": {
        "x": 8,
        "y": 0,
        "w": 8,
        "h": 8
      },
      "targets": [
        {
          "expr": "node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes",
          "legendFormat": "Used Memory",
          "refId": "A"
        },
        {
          "expr": "node_memory_MemTotal_bytes",
          "legendFormat": "Total Memory",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "bytes"
        },
        {
          "format": "short"
        }
      ],
      "lines": true,
      "fill": 1,
      "linewidth": 2,
      "thresholds": [
        {
          "colorMode": "critical",
          "fill": true,
          "line": true,
          "op": "gt",
          "value": 8589934592  
        }
      ]
    },
    {
      "id": 3,
      "title": "Memory Usage Percentage",
      "type": "gauge",
      "gridPos": {
        "x": 16,
        "y": 0,
        "w": 8,
        "h": 8
      },
      "targets": [
        {
          "expr": "((node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes) * 100",
          "legendFormat": "Memory Usage",
          "refId": "A"
        }
      ],
      "options": {
        "orientation": "horizontal",
        "reduceOptions": {
          "values": false,
          "calcs": ["mean"],
          "fields": ""
        },
        "showThresholdLabels": false,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "thresholds"
          },
          "mappings": [],
          "thresholds": {
            "steps": [
              {
                "color": "green",
                "value": null
              },
              {
                "color": "red",
                "value": 80
              }
            ]
          },
          "unit": "percent"
        },
        "overrides": []
      }
    },
    {
      "id": 4,
      "title": "Network Traffic",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 8,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(node_network_receive_bytes_total[5m]) * 8",
          "legendFormat": "{{device}} Receive",
          "refId": "A"
        },
        {
          "expr": "rate(node_network_transmit_bytes_total[5m]) * 8",
          "legendFormat": "{{device}} Transmit",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "bps"
        },
        {
          "format": "short"
        }
      ],
      "lines": true,
      "fill": 1,
      "linewidth": 2
    },
    {
      "id": 5,
      "title": "Disk I/O",
      "type": "graph",
      "gridPos": {
        "x": 12,
        "y": 8,
        "w": 12,
        "h": 8
      },
      "targets": [
        {
          "expr": "rate(node_disk_read_bytes_total[5m])",
          "legendFormat": "{{device}} Read",
          "refId": "A"
        },
        {
          "expr": "rate(node_disk_written_bytes_total[5m])",
          "legendFormat": "{{device}} Write",
          "refId": "B"
        }
      ],
      "yaxes": [
        {
          "format": "Bps"
        },
        {
          "format": "short"
        }
      ],
      "lines": true,
      "fill": 1,
      "linewidth": 2
    },
    {
      "id": 6,
      "title": "System Load",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 16,
        "w": 8,
        "h": 8
      },
      "targets": [
        {
          "expr": "node_load1",
          "legendFormat": "1min Load",
          "refId": "A"
        },
        {
          "expr": "node_load5",
          "legendFormat": "5min Load",
          "refId": "B"
        },
        {
          "expr": "node_load15",
          "legendFormat": "15min Load",
          "refId": "C"
        }
      ],
      "yaxes": [
        {
          "format": "short"
        },
        {
          "format": "short"
        }
      ],
      "lines": true,
      "fill": 1,
      "linewidth": 2
    },
    {
      "id": 7,
      "title": "CPU Cores Usage",
      "type": "heatmap",
      "gridPos": {
        "x": 8,
        "y": 16,
        "w": 8,
        "h": 8
      },
      "targets": [
        {
          "expr": "sum by (mode, cpu) (rate(node_cpu_seconds_total[5m]))",
          "legendFormat": "{{cpu}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short"
        },
        {
          "format": "short"
        }
      ]
    },
    {
      "id": 8,
      "title": "Top Processes by CPU",
      "type": "table",
      "gridPos": {
        "x": 16,
        "y": 16,
        "w": 8,
        "h": 8
      },
      "targets": [
        {
          "expr": "topk(5, rate(node_cpu_seconds_total{mode!=\"idle\"}[5m]))",
          "legendFormat": "{{process}}",
          "refId": "A",
          "format": "table"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "instance": true,
              "job": true
            },
            "indexByName": {},
            "renameByName": {
              "Value": "CPU Usage"
            }
          }
        }
      ]
    }
  ],
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "refresh": "10s",
  "schemaVersion": 27,
  "version": 1,
  "description": "Comprehensive system monitoring dashboard with CPU, memory, network, and disk metrics"
}